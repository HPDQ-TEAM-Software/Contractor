            var search = $('#txtsearch').val();
        var MaNV = $('#MaNV').val();
        window.location.href = '@Url.Action("Index", "ConStaffStatistics")?MaNV=' + MaNV+'&search=' + search;
        });
    $("#txtsearch").keyup(function (event) {
