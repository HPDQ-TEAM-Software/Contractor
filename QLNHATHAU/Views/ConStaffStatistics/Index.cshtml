
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using QLNHATHAU.Models;
@model PagedList.IPagedList<ContractorStaffValidation>
@using PagedList.Mvc;

@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}
<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />


<div class="card mb-4">
    <div class="card-header">

        <label class="pull-left">Thống kê Nhân viên</label>
        <div class="pull-left form-group">
            <label class="small mb-1">Nhà Thầu</label>
            @*@Html.DropDownListFor(model => model.IDNhaThau, ViewBag.NTList as SelectList, "--Chọn nhà thầu--", new { @id = "IDNhaThau", @class = "form-control" })*@
        </div>
        <label class="pull-right">Tổng số Nhân viên : </label>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center" width="100px">STT</th>
                        <th width="180px">Mã Nhân Viên</th>
                        <th width="320px">Họ và Tên</th>
                        <th width="180px">Số CMND</th>
                        <th width="300px">Hạng mục</th>
                        <th >Nhà thầu</th>
                        <th class="text-center" width="150px">Tình trạng</th>
                    </tr>
                </thead>
                <tbody>
                     @{
                        int pageno = (int)Model.PageNumber;
                        int itemperpage = (int)Model.PageSize;
                        int RowNo = ((pageno - 1) * itemperpage) + 1;
                    }

                    @foreach (var item in Model)
                    {

                    <tr>
                        <td class="text-center"> @RowNo@{RowNo++;}</td>
                        <td>@item.MaNV </td>
                        <td>@item.HovaTen</td>
                        <td>@item.CMND</td>
                        <td >@item.TenHD</td>
                        <td >@item.TenNhaThau</td>
                        <td class="text-center">
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="pager">
                @Html.PagedListPager(Model, page => Url.Action("Index", "ConStaffStatistics", new { page }))
                <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
            </div>
        </div>
    </div>
</div>




