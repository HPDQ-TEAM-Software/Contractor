@using QLNHATHAU.Models
@model PagedList.IPagedList<QuyenValidation>
@using PagedList.Mvc
<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />

    @if (TempData["msgSuccess"] != null)
    {
        @Html.Raw(TempData["msgSuccess"])
    }
    @if (TempData["msgError"] != null)
    {
        @Html.Raw(TempData["msgError"])
    }
    <div class="card mb-4">
        <div class="card-header">
            <label class="pull-left">Quản lý quyền</label>
            <button type="button" id="btn-add" class="btn btn-primary pull-right"><i class="fa fa-plus">&nbsp;</i>&nbsp;Thêm mới </button>
            <div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Create","Quyen")'></div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Tên Quyền</th>
                            <th class="center-td">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenQuyen</td>
                                <td class="center-td">
                                    <a id="btn-edit_@item.IDQuyen" title="Sửa" class="fa fa-pencil-square-o icon_action"></a>
                                    <div class="modal fade" id="myModale_@item.IDQuyen" role="dialog" data-url='@Url.Action("Edit","Quyen", new { id = item.IDQuyen })'></div>
                                    <script type="text/javascript">
                                    $("#btn-edit_@item.IDQuyen").click(function () {
                                        var url = $('#myModale_@item.IDQuyen').data('url');
                                        $.get(url, function (data) {
                                            $("#myModal").html(data);
                                            $("#ModalTitle").html("Cập nhật quyền");
                                            $("#myModal").modal('show');
                                        });
                                    });
                                    </script>
                                    <a class="fa fa-trash icon_action" title="Xóa" href="@Url.Action("Delete", "Quyen", new { id = item.IDQuyen })" onclick="return confirm('Bạn muốn xóa @item.TenQuyen')" title="Xóa"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="pager">
                    @Html.PagedListPager(Model, page => Url.Action("Index", "Quyen", new { page }))
                    <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                </div>
            </div>
        </div>
    </div>

<script type="text/javascript">
    $('#btn-add').click(function () {
        var url = $('#myModal').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Thêm mới quyền");
            $("#myModal").modal('show');
        });
    });
</script>