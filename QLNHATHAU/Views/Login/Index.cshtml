
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quản lý nhà thầu</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <meta name="description" content="overview &amp; stats" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" type="image/png" />
    <link href="~/Content/assets/css/style_login.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-text">
        <div class="container" id="container">
            <div class="form-container log-in-container">
                <form action="#">
                    <h1>Login</h1>
                    <input type="text" placeholder="Username" />
                    <input type="password" placeholder="Password" />
                    <input type="checkbox" id="remember" name="remember" value="password" />
                    <span for="remember">Save your password</span><br>
                    <a href="#">Forgot your password?</a>
                    <button>Log In</button>
                </form>
            </div>
            <div class="overlay-container">
                <div class="overlay">
                </div>
                <div class="overlay-panel overlay-right">
                    <img src="/images/logoH50.png">
                    <h3>Quản Lý Nhà Thầu</h3>
                    <p><a href="mailto:bancntt@hoaphat.com.vn"><i class="fa fa-envelope-o" aria-hidden="true"></i> bancntt@hoaphat.com.vn</a></p>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="">
                <p>Copyright © Công ty CP Thép Hòa Phát Dung Quất 2017 - @DateTime.Now.Year</p>
            </div>
        </div>
    </div>
</body>
</html>
