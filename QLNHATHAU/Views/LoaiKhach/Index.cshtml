@using QLNHATHAU.Models
@model PagedList.IPagedList<LoaiKhachValidation>
@using PagedList.Mvc

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh sách nhân viên</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
    <style>
        body {
            width: 100%;
            height: 100%;
        }

        .center-td {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    @if (TempData["msgSuccess"] != null)
    {
        @Html.Raw(TempData["msgSuccess"])
    }
    @if (TempData["msgError"] != null)
    {
        @Html.Raw(TempData["msgError"])
    }
    <div class="card mb-4">
        <div class="card-header">
            <label class="pull-left">Tên Khách</label>
            <button type="button" id="btn-add" class="btn btn-success pull-right"><i class="fa fa-plus">&nbsp;</i>&nbsp;Thêm mới </button>
            <div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Create","LoaiKhach")'></div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Tên Khách</th>
                            <th class="center-td">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenKhach</td>
                                <td class="center-td">
                                    <a id="btn-edit_@item.IDLoaiKhach" title="Sửa" class="fa fa-pencil-square-o icon_action"></a>
                                    <div class="modal fade" id="myModale_@item.IDLoaiKhach" role="dialog" data-url='@Url.Action("Edit","LoaiKhach", new { id = item.IDLoaiKhach })'></div>
                                    <script type="text/javascript">
                                    $("#btn-edit_@item.IDLoaiKhach").click(function () {
                                        var url = $('#myModale_@item.IDLoaiKhach').data('url');
                                        $.get(url, function (data) {
                                            $("#myModal").html(data);
                                            $("#ModalTitle").html("Cập nhật loại khách");
                                            $("#myModal").modal('show');
                                        });
                                    });
                                    </script>
                                    <a class="fa fa-trash icon_action" ,title="Xóa" href="@Url.Action("Delete", "LoaiKhach", new { id = item.IDLoaiKhach })"
                                       onclick="return confirm('Bạn muốn xóa loại khách: @item.TenKhach')" title="Xóa"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="pager">
                    @Html.PagedListPager(Model, page => Url.Action("Index", "LoaiKhach", new { page }))
                    <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    $('#btn-add').click(function () {
        var url = $('#myModal').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Thêm mới Loại Khách");
            $("#myModal").modal('show');
        });
    });
</script>