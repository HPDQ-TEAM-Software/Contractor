@using QLNHATHAU.Models
@model PagedList.IPagedList<HopDongValidation>
@using PagedList.Mvc

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh sách hợp đồng</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/assets/css/font-awesome.min.css">
    <link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
    <style>
        body {
            width: 100%;
            height: 100%;
        }

        .button_create {
            float: right;
            margin-bottom: 15px;
        }

        .icon_action {
            cursor: pointer;
            /*margin-left: 10px;*/
        }

        .center-td {
            text-align: center;
            vertical-align: middle;
        }

        .file_icon {
            font-size: 25px;
            color: orange;
            cursor: pointer;
        }

        ul#selectedValue {
            list-style: none;
            position: absolute;
            padding: 0;
            margin: 0;
            list-style-type: none;
            background-color: #f2f2f2;
        }

            ul#selectedValue li.ui-menu-item {
                padding: 2px 5px;
            }

                ul#selectedValue li.ui-menu-item:hover {
                    background-color: #ccc
                }

                ul#selectedvalue li.ui-menu-item a:link, a:active, a:visited, a:hover {
                    text-decoration: none;
                    color: black;
                }
    </style>
</head>
<body>
    @if (TempData["msgSuccess"] != null)
    {
        @Html.Raw(TempData["msgSuccess"])
    }
    @if (TempData["msgError"] != null)
    {
        @Html.Raw(TempData["msgError"])
    }
    <div class="card mb-4">
        <div class="card-header">
            <label class="card-title pull-left">Quản lý hợp đồng</label>
            <button type="button" id="btn-add" class="btn btn-primary pull-right"><i class="fa fa-plus">&nbsp;</i>&nbsp;Thêm mới </button>
            <div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Create","HopDong")'></div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                    <thead class="thead-light">
                        <tr>
                            <th width="180px"> Số hợp đồng</th>
                            <th class="text-center"> Tên hợp đồng</th>
                            <th class="text-center"> Nhà thầu</th>
                            <th width="170px" class="text-center"> Ngày bắt đầu</th>
                            <th width="170px" class="text-center"> Ngày kết thúc</th>
                            <th width="100px" class="text-center"> File</th>
                            <th width="180px" class="text-center"> Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.SoHD </td>
                            <td>@item.TenHD</td>
                            <td class="text-center" >@item.TenNhaThau</td>
                            <td class="center-td">@item.NgayBD.Value.ToString("dd-MM-yyyy")</td>
                            <td class="center-td">@item.NgayKT.Value.ToString("dd-MM-yyyy")</td>
                            <td class="file-path text-center">
                                @if (item.FilePath != null)
                                {
                                    <a href="@Url.Action("DownloadFile", "HopDong", new { id = item.IDHD })" target="_blank">
                                        <i class="fa fa-file-pdf-o file_icon" id="file-download_@item.IDHD" aria-hidden="true" title="Download file"></i>
                                    </a>
                                }
                            </td>
                            <td class="center-td">
                                <a id="btn-edit_@item.IDHD" title="Sửa" class="fa fa-pencil-square-o icon_action">Sửa</a>
                                <div class="modal fade" id="myModale_@item.IDHD" role="dialog" data-url='@Url.Action("Edit","HopDong", new { id = item.IDHD })'></div>
                                <script type="text/javascript">
                                    $("#btn-edit_@item.IDHD").click(function () {
                                        var url = $('#myModale_@item.IDHD').data('url');
                                        console.log(url);
                                        $.get(url, function (data) {
                                            $("#myModal").html(data);
                                            $("#ModalTitle").html("Cập nhật hợp đồng");
                                            $("#myModal").modal('show');
                                        });
                                    });
                                </script>
                                &nbsp;
                                <a class="fa fa-trash icon_action" ,title="Xóa" href="@Url.Action("Delete", "HopDong", new { id = item.IDHD })"
                                   onclick="return confirm('Bạn muốn xóa hợp đồng có số HD: @item.SoHD')" title="Xóa">Xóa </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <div class="pager">
                    @Html.PagedListPager(Model, page => Url.Action("Index", "HopDong", new { page }))
                    <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    $('#btn-add').click(function () {
        var url = $('#myModal').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Thêm mới hợp đồng");
            $("#myModal").modal('show');
        });
    });
</script>

@section scripts{


}
