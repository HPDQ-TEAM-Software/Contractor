<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
<div class="card mb-4">
    <div class="card-header">
        <label class="card-title pull-left">Quản lý khách</label>

        <button type="button" id="btn-Import" class="btn btn-success pull-right"><i class="fa fa-file-excel-o">&nbsp;</i>&nbsp;Import Excel </button>
        <div class="modal fade" id="myModalimport" role="dialog" data-url='@Url.Action("ImportExcel","DangKy")'></div>

        <button type="button" id="btn-add" class="btn btn-primary pull-right"><i class="fa fa-plus">&nbsp;</i>&nbsp;Thêm mới </button>
        <div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Create","DangKy")'></div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                <thead class="thead-light">
                    <tr>
                        <th width="30px">STT</th>
                        <th width="180px">Họ Và Tên</th>
                        <th class="text-center"> Loại Khách </th>
                        <th class="text-center"> Nhà thầu</th>
                        <th width="170px" class="text-center"> Ngày</th>
                        <th class="text-center"> Cổng </th>
                        <th class="text-center"> Ghi Chú</th>
                        <th width="180px" class="text-center"> Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int pageno = (int)Model.PageNumber;
                        int itemperpage = (int)Model.PageSize;
                        int RowNo = ((pageno - 1) * itemperpage) + 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center"> @RowNo@{RowNo++;}</td>
                            <td>@item.HoTen </td>
                            <td>@item.TenKhach</td>
                            <td class="text-center">@item.TenNhaThau</td>
                            <td class="center-td">@item.Ngay.Value.ToString("dd-MM-yyyy")</td>
                            <td>@item.TenCong</td>
                            <td>@item.GhiChu</td>
                            <td class="center-td">

                                <a id="btn-edit_@item.IDKhach" title="Sửa" class="fa fa-pencil-square-o icon_action"></a>
                                <div class="modal fade" id="myModale_@item.IDKhach" role="dialog" data-url='@Url.Action("Edit","DangKy", new { id = item.IDKhach })'></div>
                                <script type="text/javascript">
                                    $("#btn-edit_@item.IDKhach").click(function () {
                                        var url = $('#myModale_@item.IDKhach').data('url');
                                        console.log(url);
                                        $.get(url, function (data) {
                                            $("#myModal").html(data);
                                            $("#ModalTitle").html("Cập nhật khách");
                                            $("#myModal").modal('show');
                                        });
                                    });
                                </script>
                                &nbsp;
                                <a class="fa fa-trash icon_action" ,title="Xóa" href="@Url.Action("Delete", "DangKy", new { id = item.IDKhach })"
                                   onclick="return confirm('Bạn muốn xóa khách có tên: @item.HoTen')" title="Xóa"></a>
                                &nbsp;
                                <a id="Check_@item.IDKhach" href="#" class="icon_action" title="Trình ký"><i class="fa fa-share-square"></i></a>

                                <div class="modal fade" id="myModale_Check_@item.IDKhach" role="dialog" data-url='@Url.Action("CheckInformation","DangKy", new { id = item.IDKhach })'></div>
                                <script type="text/javascript">
                                    $("#Check_@item.IDKhach").click(function () {
                                        var url = $('#myModale_Check_@item.IDKhach').data('url');
                                        $.get(url, function (data) {
                                            $("#myModal").html(data);
                                            $("#ModalTitle").html("Trình ký");
                                            $("#myModal").modal('show');
                                        });
                                    });
                                </script>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="pager">
                @Html.PagedListPager(Model, page => Url.Action("Index", "DangKy", new { page }))
                <span class="pageoff"> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#btn-add').click(function () {
        var url = $('#myModal').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Thêm mới khách");
            $("#myModal").modal('show');
        });
    });
    $('#btn-Import').click(function () {
        var url = $('#myModalimport').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Import");
            $("#myModal").modal('show');
        });
    });
</script>*@

