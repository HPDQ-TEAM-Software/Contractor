<style>
    body {
        width: 100%;
        height: 100%;
    }

    .button_create {
        float: right;
        margin-bottom: 15px;
    }

    .icon_action {
        cursor: pointer;
        /*margin-left: 10px;*/
    }

    .center-td {
        text-align: center;
        vertical-align: middle;
    }

    .file_icon {
        font-size: 25px;
        color: orange;
        cursor: pointer;
    }

    ul#selectedValue {
        list-style: none;
        position: absolute;
        padding: 0;
        margin: 0;
        list-style-type: none;
        background-color: #f2f2f2;
    }

