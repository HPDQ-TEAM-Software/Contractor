<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
<div class="card mb-4" style="margin-top: 100px; width: 600px; height: auto; margin-left: 700px;">
    <div class="card-header">
        <label class="card-title pull-left">Danh Sách Khách</label>
        <a href="#" class="close" data-dismiss="modal">&times;</a>
